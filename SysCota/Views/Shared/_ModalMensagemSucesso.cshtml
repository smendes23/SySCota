<div class="modal fade" id="modalMensagemSucesso" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header-customizado">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center text-success">
                <span class="fa fa-check-circle fa-5x"></span>
                <h3>@TempData["Mensagem"]</h3>
            </div>
            <div class="modal-footer-customizado">
                <button type="button" class="btn btn-lg btn-primary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
